connectivity_policy {
    allow_deployments_to_no_targets = true
}

versioning_strategy {
    template = "#{Octopus.Date.Year}.#{Octopus.Date.Month}.#{Octopus.Date.Day}.#{if Octopus.Date.Day==Octopus.Version.LastPatch}#{Octopus.Version.NextRevision}#{else}#{if Octopus.Version.LastRevision!=0}0#{else}#{Octopus.Version.NextRevision}#{/if}#{/if}"
}